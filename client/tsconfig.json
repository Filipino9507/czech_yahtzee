{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./dist/",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "ES5",
    "baseUrl": "./src",
    "paths": {
      "@app/*": ["./app/*"],
      "@features/*": ["./features/*"],
      "@util/*": ["./util/*"],
      "@models/*": ["./models/*"]
    }
  },
  "include": [
    "src/index.tsx"
  ]
}