{
  "compilerOptions": {
    "target": "es5",
    "allowJs": true,
    "skipLibCheck": true,
    "removeComments": true,
    "rootDir": "./src/",
    "outDir": "./dist/",
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "src",
  },
  "include": [
      "src",
  ],
  "references": [
    {
      "path": "../shared"
    }
  ]
}
